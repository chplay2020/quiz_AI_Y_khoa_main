# Medical Quiz Generator - Environment Configuration
# Copy this file to .env and fill in your values

# App Settings
APP_NAME="Medical Quiz Generator"
APP_VERSION="1.0.0"
DEBUG=true

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# CORS - Add your frontend URL
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# LLM Provider API Keys (set at least one)
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GOOGLE_API_KEY=your-google-api-key

# Default LLM Settings
DEFAULT_LLM_PROVIDER=openai
DEFAULT_MODEL=gpt-4-turbo-preview

# Embedding Model
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2

# Vector Store
CHROMA_PERSIST_DIR=./data/chroma_db
COLLECTION_NAME=medical_documents

# Document Processing
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_FILE_SIZE_MB=50

# Upload Settings
UPLOAD_DIR=./data/uploads
ALLOWED_EXTENSIONS=[".pdf", ".pptx", ".ppt", ".docx", ".doc", ".txt"]

# Database (for production, use PostgreSQL)
DATABASE_URL=sqlite:///./data/medical_quiz.db

# Redis (optional, for caching)
# REDIS_URL=redis://localhost:6379

# Question Generation
DEFAULT_NUM_QUESTIONS=10
MAX_QUESTIONS_PER_REQUEST=50
